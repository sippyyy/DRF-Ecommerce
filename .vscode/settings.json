{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",

        "editor.formatOnSave": true,
        "editor.codeActionsOnSave":{
          "source.organizeImports": true
        },
      },
      "black-formatter.args":["--max-line-length","88"],
      "flake8.args": ["--max-line-length","88"]
}